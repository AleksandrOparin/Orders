<% provide :title, order.new_record? ? t('.new_page_title') : t('.edit_page_title') %>

<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4"><%= order.new_record? ? t('.new_title') : t('.edit_title') %></p>
    
                <%= form_with(model: order, class: "mx-1 mx-md-4") do |form| %>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-heading fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.text_field :title, class: order.new_record? ? "form-control mb-0" : "form-control mb-0 active" %>
                      <%= form.label :title, class: "form-label", value: t('.title_placeholder') %>

                      <% if order.errors[:title].any? %>
                        <div class="form-helper text-danger"> <%= order.errors.messages_for(:title)[0] %> </div>
                      <% end %>

                    </div>
                  </div>
  
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-comment fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.text_area :description, class: order.new_record? ? "form-control mb-0" : "form-control mb-0 active", rows: "4" %>
                      <%= form.label :description, class: "form-label", value: t('.describe_placeholder') %>

                      <% if order.errors[:description].any? %>
                        <div class="form-helper text-danger"> <%= order.errors.messages_for(:description)[0] %> </div>
                      <% end %>

                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-dollar-sign fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.text_field :cost, class: order.new_record? ? "form-control mb-0" : "form-control mb-0 active" %>
                      <%= form.label :cost, class: "form-label", value: t('.cost_placeholder') %>

                      <% if order.errors[:cost].any? %>
                        <div class="form-helper text-danger"> <%= order.errors.messages_for(:cost)[0] %> </div>
                      <% end %>

                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-calendar-alt fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.date_field :time_to_complete, class: order.new_record? ? "form-control mb-0" : "form-control mb-0 active" %> 
                      <%= form.label :time_to_complete, class: "form-label", value: t('.time_to_complete_placeholder') %>

                      <% if order.errors[:time_to_complete].any? %>
                        <div class="form-helper text-danger"> <%= order.errors.messages_for(:time_to_complete)[0] %> </div>
                      <% end %>

                    </div>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <%= form.submit (order.new_record? ? t('.upload') : t('.save_changes')), class: "btn btn btn-outline-primary btn-rounded btn-lg", id: (order.new_record? ? 'submit-btn' : 'save-btn') %>
                  </div>

                <% end %>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                <img src= "<%= order.new_record? ? '/images/Order.png' : '/images/Edit.jpg'%>" class="img-fluid rounded-pill" alt="Sample image">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>